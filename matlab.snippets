snippet if
if (${1})
	${0}
end
endsnippet

snippet for
for i${1} = 1:n${2:$1}
	${0}
end
endsnippet

snippet fors "For items in struct"
for i${2:`!p snip.rv=t[1][0:1].upper() + t[1][1:-1]`} = 1:length($1)
	this`!p snip.rv=t[1][0:1].upper() + t[1][1:-1]` = $1($2)
	${0}
end
endsnippet

snippet cl "class with constructor" b
classdef ${1:`!p
snip.rv = snip.basename or "class_name"`} 
	properties
		${2}
	end
	methods
		function obj = $1(${3})
			${4}
		end${0}
	end
end
endsnippet

snippet test "Unit test" b
classdef ${1} < matlab.unittest.TestCase

	methods (Test)
		function ${0}(testCase)
		end
	end

end
endsnippet
